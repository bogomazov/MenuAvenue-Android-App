<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@style/Theme.AppCompat">
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="NoTitleBar"
           parent="@style/Theme.CustomTheme">
        <item name="android:actionBarStyle">@android:style/Theme.Translucent.NoTitleBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar"
           parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#fff</item>
    </style>
    <style name="EditTextCustomHolo" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edittextcustom_edit_text_holo_light</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>