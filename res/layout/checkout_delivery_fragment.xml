<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
            >

        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:id="@+id/deliveryAddress"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="@string/information"/>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/lines">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:layout_weight="1"
                    android:id="@+id/cityName"
                    android:layout_marginLeft="20dp"
                    android:text="kiev"/>
            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:layout_weight="1"
                    android:id="@+id/city"/>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:background="@drawable/lines">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/streetName"
                      android:layout_marginLeft="20dp"/>
            <AutoCompleteTextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/street"/>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:background="@drawable/lines">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/houseName"
                      android:layout_marginLeft="20dp"/>
            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/house"/>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:background="@drawable/lines">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/flatName"
                      android:layout_marginLeft="20dp"/>
            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/flat"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/newClient">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:id="@+id/information"
                      android:gravity="center"
                      android:textStyle="bold"
                      android:textSize="15sp"
                      android:text="@string/contactInfo"
                    />
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:background="@drawable/lines"
                          android:id="@+id/emailId">
                <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:id="@+id/emailName"
                          android:layout_marginLeft="20dp"/>
                <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:id="@+id/email"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:background="@drawable/lines">
                <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:id="@+id/phoneNumberName"
                          android:layout_marginLeft="20dp"/>
                <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:id="@+id/phoneNumber"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal">
            <ToggleButton android:layout_width="fill_parent" android:layout_height="fill_parent"
                    android:id="@+id/inOneHour"
                    android:layout_weight="1"
                    android:background="@drawable/btn_toggle"/>
            <ToggleButton android:layout_width="fill_parent" android:layout_height="fill_parent"
                    android:id="@+id/otherTime"
                    android:layout_weight="1"
                    android:background="@drawable/btn_toggle"/>
       </LinearLayout>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:id="@+id/commentTitle"
                  android:layout_marginLeft="20dp"
                  android:textSize="15sp"
                android:gravity="center"
                android:textStyle="bold"/>
        <EditText android:layout_width="fill_parent" android:layout_height="100dp"
                android:id="@+id/comment"/>
        <Button android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:id="@+id/submitOrder"/>
    </LinearLayout>
</ScrollView>